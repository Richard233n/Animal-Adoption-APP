.great {
  position: relative;
}
.mine {
  background: -webkit-linear-gradient(left, orangered, orange);
  width: 100%;
  height: 400rpx;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}
.mine__head {
  background-size: cover;
  border-radius: 50%;
  width: 98rpx;
  height: 96rpx;
  background-color: #ffffff;
  border: solid 2rpx #707070;
  position: absolute;
  top: 72rpx;
  left: 38rpx;
}
.mine__name {
  height: 32rpx;
  font-size: 34rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
  position: absolute;
  top: 104rpx;
  left: 154rpx;
}
.order {
  width: 702rpx;
  height: 220rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  position: absolute;
  top: 228rpx;
  left: 24rpx;
}
.order__me {
  color: #222222;
  position: absolute;
  left: 46rpx;
  top: 30rpx;
}
.order__all {
  color: #b8b8b8;
  position: absolute;
  right: 46rpx;
  top: 30rpx;
}
.order__image {
  display: flex;
  justify-content: space-around;
  margin-top: 85rpx;
}
.order__image__icon {
  font-size: 55rpx;
  background-image: linear-gradient(180deg, #fbc720 0%, #f83f02 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.order__image__text {
  font-size: 24rpx;
  color: #222222;
  margin-top: 22rpx;
}
.location {
  width: 702rpx;
  height: 364rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  margin: 90rpx 24rpx 0 24rpx;
  display: flex;
  flex-wrap: wrap;
}
.location__icon {
  font-size: 55rpx;
  background-image: linear-gradient(180deg, #fbc720 0%, #f83f02 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 48rpx 50rpx 22rpx 60rpx;
}
.location__text {
  color: #222222;
  font-size: 24rpx;
  margin: 0 40rpx 0 40rpx;
}
.enter {
  width: 702rpx;
  height: 84rpx;
  background-image: linear-gradient(180deg, #fbc720 0%, #f83f02 100%);
  border-radius: 8rpx;
  color: #FFFFFF;
  margin-top: 86rpx;
}
.head {
  border-radius: 50%;
  width: 98rpx;
  height: 96rpx;
}

