.orange {
  background-image: linear-gradient(180deg, #fbc720 0%, #f83f02 100%);
  width: 100%;
  height: 400rpx;
  border-bottom-left-radius: 150rpx;
  border-bottom-right-radius: 150rpx;
  position: relative;
}
.arrow {
  color: #FFFFFF;
  font-size: 20px;
  position: absolute;
  top: 62rpx;
  left: 22rpx;
}
.order {
  width: 702rpx;
  height: 240rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.16);
  border-radius: 18rpx;
  position: absolute;
  top: 228rpx;
  left: 24rpx;
}
.order__sh {
  font-size: 40rpx;
  margin: 20rpx 0 0 24rpx;
}
.order__name {
  font-size: 32rpx;
  color: #444444;
  margin: 20rpx 0 0 24rpx;
}
.order__city {
  color: #999999;
  margin: 10px 0 0 20rpx;
}
.service {
  width: 704rpx;
  margin: 0 auto;
  position: relative;
  top: 150rpx;
  border-radius: 18rpx;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.16);
}
.service__matter {
  display: flex;
  margin-left: 24rpx;
  padding-top: 24rpx;
}
.service__photo {
  width: 164rpx;
  height: 166rpx;
  border-radius: 10rpx;
}
.service__title {
  font-size: 24rpx;
  color: #4d4d4d;
  margin: 0 0 0 40rpx;
}
.service__price {
  color: #4d4d4d;
  margin: 20rpx 0 0 40rpx;
}
.service__zj {
  color: red;
  margin: 20rpx 0 0 40rpx;
}
.base {
  width: 750rpx;
  height: 120rpx;
  position: fixed;
  bottom: 0;
}
.base__box {
  display: flex;
  box-shadow: 0rpx -6rpx 14rpx 0rpx rgba(0, 0, 0, 0.05);
  font-size: 32rpx;
  color: #444444;
  line-height: 120rpx;
  padding-left: 24rpx;
  justify-content: space-between;
}
.base__box__zf {
  width: 258rpx;
  height: 120rpx;
  background-color: #fcb826;
  color: #ffffff;
  text-align: center;
}

